<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_gravity="top"
    android:background="@drawable/venue_container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/image_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/info_venue_iv"
                android:layout_width="100dp"
                android:minWidth="100dp"
                android:layout_alignParentLeft="true"
                android:minHeight="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/candyshopdefault"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/image_rl"
            android:layout_toLeftOf="@+id/rating_rl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/info_storename_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lateau Patisserie"
                android:minLines="2"
                android:textSize="16sp"
                android:textColor="@color/red_dark"/>

            <TextView
                android:id="@+id/info_storeaddress_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_dark"
                android:textSize="12sp"
                android:text="Ηρώων Πολυτεχνείου 9"
                android:minLines="2"/>

            <TextView
                android:id="@+id/info_storecategory_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/candy_store"
                android:textSize="12sp"
                android:textColor="@color/orange_theme"/>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rating_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="6.4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/custom_rating_circle"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:id="@+id/info_storerating_tv" />
        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>